// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  alias         String
  email         String?   @unique
  role          String    // 'member' | 'companion'
  walletAddress String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  bookingsAsClient    Booking[] @relation("ClientBookings")
  bookingsAsCompanion Booking[] @relation("CompanionBookings")
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String
  price       Float
  description String
  bookings    Booking[]
}

model Booking {
  id          String   @id @default(cuid())
  date        DateTime
  status      String   // 'pending' | 'confirmed' | 'completed' | 'cancelled'
  txHash      String?
  totalPrice  Float
  addons      String?  // JSON string or comma-separated list
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  clientId    String
  client      User     @relation("ClientBookings", fields: [clientId], references: [id])

  companionId String
  companion   User     @relation("CompanionBookings", fields: [companionId], references: [id])

  serviceId   Int
  service     Service  @relation(fields: [serviceId], references: [id])
}
